{
  "globs": [
    "**/*.py",
    "**/*.pyi",
    "**/*.pyx",
    "**/*.pxd",
    "**/requirements.txt",
    "**/requirements*.txt",
    "**/setup.py",
    "**/setup.cfg",
    "**/pyproject.toml",
    "**/Pipfile",
    "**/Pipfile.lock",
    "**/.python-version",
    "**/pytest.ini",
    "**/tox.ini",
    "**/.flake8",
    "**/.pylintrc"
