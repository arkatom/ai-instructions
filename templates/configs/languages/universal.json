{
  "globs": [
    "**/*.md",
    "**/*.txt",
    "**/*.yml",
    "**/*.yaml",
    "**/*.json",
    "**/*.xml",
    "**/*.toml",
    "**/*.ini",
    "**/*.cfg",
    "**/*.conf",
    "**/README*",
    "**/LICENSE*",
    "**/CHANGELOG*",
    "**/.gitignore",
    "**/.gitattributes",
    "**/Dockerfile",
    "**/docker-compose.yml",
    "**/.env",
    "**/.env.*",
    "**/Makefile",
    "**/*.sh",
    "**/*.bash"
  ],
  "description": "Universal configuration and documentation files",
  "languageFeatures": [
    "Configuration files",
    "Documentation",
    "Build scripts",
    "Environment variables",
    "Container definitions"
  ]
}